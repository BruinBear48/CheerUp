        id = "com.shergillgames.cheerup"
        version = "0.8.1">

    <name>Cheer Up!</name>

    <description>
        Cheer yourself up by viewing adorable random photos from imgur.com/r/aww.
    </description>

    <author href="shergillgames.com" email="mandeep@shergillgames.com">
        Mandeep Shergill
    </author>
    <feature name="http://api.phonegap.com/1.0/network"/>
    <preference name="permissions" value="none"/>
    <!-- Define app icon for each platform. -->
    <icon src="img/icon256.png" />

    <access origin="http://127.0.0.1*"/>
    <access origin="*"/>

